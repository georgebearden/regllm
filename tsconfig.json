{
  "compilerOptions": {
    "allowJs": false,
    "target": "ES2024",
    "lib": [
      "es2024",
      "dom"
    ],
    "types": [
      "jest",
      "node"
    ],
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "src",
    "isolatedModules": true,
    "moduleResolution": "NodeNext",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}