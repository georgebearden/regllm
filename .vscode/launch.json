{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "smartStep": true,
      "name": "Debug Jest Tests",
      "args": [
        "--experimental-vm-modules",
        "${workspaceFolder}/node_modules/.bin/jest",
        "--runInBand"
      ],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
